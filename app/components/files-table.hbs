<section class="files-table-section" ...attributes>
  <header>
    <h6 class="section-header" data-test-select-all-header>
      <label for="select-all">
        <input
          type="checkbox"
          id="select-all"
          checked={{this.allSelected}}
          indeterminate={{this.indeterminate}}
          {{on "change" this.updateSelection}}
        />
        {{#if this.selectedCount}}
          Selected {{this.selectedCount}}
        {{else}}
          None Selected
        {{/if}}
      </label>
    </h6>
    <button type="button" class="download-available-files-btn" disabled={{this.downloadDisabled}} {{on "click" this.downloadSelected}}>
      Download Selected
    </button>
  </header>
  <table class="files-table">
    <thead>
      <th class="table-header" data-test-name-table-header>
        <label class="name-header-label">Name</label>
      </th>
      <th class="table-header" data-test-device-table-header>
        Device
      </th>
      <th class="table-header" data-test-path-table-header>
        Path
      </th>
      <th class="table-header" data-test-status-table-header>
        <label class="status-header-label">Status</label>
      </th>
    </thead>
    <tbody>
      {{#each this.fileItems as |file index|}}
        <tr data-test-table-row="{{index}}" class="file {{if file.checked "selected"}}">
          <td class="name">
            <label id="file-{{index}}" class="name-label">
              <input
                checked={{file.checked}}
                type="checkbox"
                for="file-{{index}}"
                class="name-checkbox"
                {{on "change" (fn this.updateCheckbox file)}}
              />
              {{file.name}}
            </label>
          </td>
          <td class="device">{{file.device}}</td>
          <td class="path">{{file.path}}</td>
          <td class="status">
            <i class="available-icon {{if (not-eq file.status "available") "hidden"}}" aria-hidden="true" />
            {{file.status}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>